{
    "editor.detectIndentation": false,
    "editor.fontFamily": "Inziu Iosevka SC",
    "editor.fontSize": 18,
    "editor.rulers": [120],
    "editor.renderWhitespace": "boundary",
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 120,

    "explorer.openEditors.visible": 0,

    "extensions.ignoreRecommendations": true,

    "files.autoSave": "onFocusChange",
    "files.eol": "\n",
    "files.hotExit": "off",
    "files.insertFinalNewline": true,

    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.shell.windows": "C:\\Program Files\\PowerShell\\6.0.0\\pwsh.exe",

    "window.openFilesInNewWindow": "on",

    "workbench.colorTheme": "Default Light+",

    "powershell.integratedConsole.showOnStartup": false, //[Windows]
    "powershell.startAutomatically": false, //[Windows]

    "vim.useCtrlKeys": false
}
